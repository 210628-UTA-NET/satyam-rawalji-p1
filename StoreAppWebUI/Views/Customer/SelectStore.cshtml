@model IEnumerable<StoreAppWebUI.Models.StoreFrontVM>
@{
    var customer = Context.Request.Query["p_id"];
    int Customer = Convert.ToInt32(customer);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h3>Select Store for Order</h3>

    <!-- table to list stores -->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.ActionLink("Place Order", "Order", new { p_id = Customer, p_storeId = item.Id }, new { @style = "color:white;", @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-danger" style="position:relative; top:10px;">Back</a>
</body>
</html>