@model IEnumerable<StoreAppWebUI.Models.CustomerVM>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Customer Options</title>
</head>
<body>
    <h3>Found Customer(s)</h3>

    <!-- table to list the found customer -->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.City),
                        @Html.DisplayFor(modelItem => item.State)
                        @Html.DisplayFor(modelItem => item.ZipCode)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>
                        @Html.ActionLink("Place Order", "Order", new { p_id = item.Id }, new { @style = "color:white;", @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-danger" style="position:relative; top:10px;">Back</a>
</body>
</html>