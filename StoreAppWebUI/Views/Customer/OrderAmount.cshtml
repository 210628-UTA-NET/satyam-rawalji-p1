@model StoreAppWebUI.Models.OrderVM

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h3>Choose Order Amount</h3>
 
    <form asp-action="OrderPlaced">
        <input hidden asp-for="StoreId" value="@ViewBag.store" />
        <input hidden asp-for="LineItemId" value="@ViewBag.product" />
        <input hidden asp-for="CustomerId" value="@ViewBag.customer" />

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Amount to Order</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @ViewBag.name
                    </td>
                    <td>
                        @ViewBag.quantity
                    </td>
                    <td>
                        @ViewBag.price
                    </td>
                    <td>
                        <input asp-for="QuantitySold" />
                    </td>
                </tr>
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <a asp-action="Index" class="btn btn-danger" style="position:relative; top:10px;">Back</a>
</body>
</html>