@model IEnumerable<StoreAppWebUI.Models.OrderVM>
@{ 
    int storeid = Convert.ToInt32(Context.Request.Query["storeId"]);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h3>Order History</h3>

    <!-- table to list store's order history -->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink("Date", "StoreOrders",
                        new { storeId = storeid, sortOrder = ViewBag.DateSort })
                </th>
                <th>Item</th>
                <th>Quantity Sold</th>
                <th>
                    @Html.ActionLink("Total", "StoreOrders",
                        new { storeId = storeid, sortOrder = ViewBag.PriceSort })
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LineItem.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuantitySold)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-danger" style="position:relative; top:10px;">Back</a>
</body>
</html>